@model DudiGames.Models.ViewModel.PedidoViewModel
@{
    ViewData["Title"] = "Detalhar";
}

<h2>@ViewData["Title"]</h2>

<h4>Venda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @Html.HiddenFor(x => x.PedidoId)
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">

            @Html.LabelFor(model => model.DataVenda, htmlAttributes: new { @class = "control-label" })

            @Html.DisplayFor(model => model.DataVenda, new { htmlAttributes = new { @class = "control-label" } })
            @Html.ValidationMessageFor(model => model.DataVenda, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">

            @Html.LabelFor(model => model.NomeProduto, htmlAttributes: new { @class = "control-label" })

            @Html.DisplayFor(model => model.NomeProduto, new { htmlAttributes = new { @class = "control-label" } })
            @Html.ValidationMessageFor(model => model.NomeProduto, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">

            @Html.LabelFor(model => model.Quantidade, htmlAttributes: new { @class = "control-label" })

            @Html.DisplayFor(model => model.Quantidade, new { htmlAttributes = new { @class = "control-label" } })
            @Html.ValidationMessageFor(model => model.Quantidade, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">

            @Html.LabelFor(model => model.ValorVenda, htmlAttributes: new { @class = "control-label" })

            @Html.DisplayFor(model => model.ValorVenda, new { htmlAttributes = new { @class = "control-label" } })
            @Html.ValidationMessageFor(model => model.ValorVenda, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">

            @Html.LabelFor(model => model.TotalVenda, htmlAttributes: new { @class = "control-label" })

            @Html.DisplayFor(model => model.TotalVenda, new { htmlAttributes = new { @class = "control-label" } })
            @Html.ValidationMessageFor(model => model.TotalVenda, "", new { @class = "text-danger" })
        </div>



        <div class="form-group">
            @Html.ActionLink("Editar", "Edit", "Compras", new { @id = Model.PedidoId })
        </div>
        @Html.ActionLink("Voltar", "Index", "Compras", new { htmlAttributes = new { @class = "btn btn-primary" } })

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}