@model IEnumerable<DudiGames.Models.ViewModel.FinanceiroViewModel>

@{
    ViewData["Title"] = "Financeiro";
}

<h2>@ViewData["Title"]</h2>


<table class="table table-striped table-hover">
    <thead>
        <tr class="success">


            <th>
                @Html.DisplayNameFor(model => model.NomeProduto)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.PrecoUnitario)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DataVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoVenda)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Lucro)

            </th>

            



            <th></th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.NomeProduto)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PrecoUnitario)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DataVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecoVenda)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.Lucro)
            </td>
            

        </tr>
            

        }


    </tbody>


</table>
